@model ConfirmMailViewModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
<form method="post">
    <h2>Taşınan Mail adresi: @ViewBag.v</h2>
    <label>Kullanıcı ID Değeri</label>
    <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
    <br /> <label>E-Posta adresinize gelen Gelen 6 haneli kodu giriniz.</label>
    <input type="text" asp-for=ConfirmCode class="form-control" />
    <br />
    <button class="btn btn-primary">Hesabı Aktifleştir</button>
</form>
</div>